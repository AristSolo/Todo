<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Choose what to Schedule"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_width="302dp"
            android:layout_height="47dp" android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"
    />
    <Spinner
            android:layout_width="150dp"
            android:layout_height="37dp" android:id="@+id/spinner"
            android:entries="@array/spinner_items"
            app:layout_constraintStart_toStartOf="@+id/header" app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintBottom_toTopOf="@+id/description"/>
    <EditText
            android:layout_width="326dp"
            android:layout_height="179dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/text"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintBottom_toTopOf="@+id/save"
            app:layout_constraintStart_toStartOf="@+id/description"/>
    <TextView
            android:text="Describe what you want to accomplish"
            android:textStyle="italic"
            android:layout_width="300dp"
            android:layout_height="46dp" android:id="@+id/description"
            app:layout_constraintStart_toStartOf="@+id/spinner" app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintBottom_toTopOf="@+id/text"/>
    <Button
            android:text="Save"
            android:layout_width="164dp"
            android:layout_height="53dp" android:id="@+id/save"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>