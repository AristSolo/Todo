<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="130dp"
            android:layout_height="39dp" android:id="@+id/spinner"
            android:entries="@array/spinner_items"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintBottom_toTopOf="@+id/description" app:layout_constraintStart_toStartOf="@+id/header"/>
    <TextView
            android:text="Choose what to Schedule"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_width="303dp"
            android:layout_height="35dp" android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.38"/>
    <TextView
            android:text="Describe what you want to accomplish"
            android:textStyle="italic"
            android:layout_width="308dp"
            android:layout_height="36dp" android:id="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintBottom_toTopOf="@+id/text" app:layout_constraintStart_toStartOf="@+id/spinner"/>
    <EditText
            android:layout_width="327dp"
            android:padding="3dp"
            android:background="@drawable/editable"
            android:layout_height="208dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/text"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintStart_toStartOf="@+id/save"
            app:layout_constraintEnd_toEndOf="@+id/save"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Save"
            android:layout_width="181dp"
            android:layout_height="47dp" android:id="@+id/save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" android:layout_marginTop="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>