<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginStart="20dp"
                                                   android:layout_marginLeft="30dp">

    <androidx.cardview.widget.CardView
            android:layout_width="343dp"
            android:layout_height="113dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="4dp" app:cardElevation="3dp"
            android:background="@drawable/card" app:cardBackgroundColor="#DC55B7C8" android:layout_marginLeft="28dp"
            android:layout_marginStart="24dp" android:layout_marginRight="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="116dp">
            <TextView
                    android:layout_width="99dp"
                    android:layout_height="32dp" android:id="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/due"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintBottom_toBottomOf="@+id/due" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:layout_width="104dp"
                    android:layout_height="32dp" android:id="@+id/due"
                    app:layout_constraintStart_toEndOf="@+id/name" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/state" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/des" app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="280dp"
                    android:layout_height="53dp" android:id="@+id/des"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/due" app:layout_constraintHorizontal_bias="0.5"/>
            <TextView
                    android:text="pending"
                    android:layout_width="76dp"
                    android:layout_height="32dp" android:id="@+id/state"
                    app:layout_constraintStart_toEndOf="@+id/due" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/name"
                    app:layout_constraintBottom_toBottomOf="@+id/name" app:layout_constraintVertical_bias="1.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>