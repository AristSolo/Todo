<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="282dp"
            android:layout_height="35dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/searchView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.432"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="198dp" android:id="@+id/guideline"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="407dp"
            android:layout_height="414dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerView" app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="Button"
            android:layout_width="91dp"
            android:layout_height="39dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintBottom_toBottomOf="@+id/button3"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="39dp" android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>
    <Button
            android:text="Button"
            android:layout_width="98dp"
            android:layout_height="39dp" android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/button2" app:layout_constraintBottom_toBottomOf="@+id/button2"/>
    <SearchView
            android:layout_width="279dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="@+id/textView" android:id="@+id/searchView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>